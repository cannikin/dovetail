<h1>Listing ads</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Location</th>
    <th>User</th>
    <th>Category</th>
  </tr>

<% for ad in @ads %>
  <tr>
    <td><%=h ad.title %></td>
    <td><%=h ad.description %></td>
    <td><%=h ad.price %></td>
    <td><%=h ad.location %></td>
    <td><%=h ad.user_id %></td>
    <td><%=h ad.category_id %></td>
    <td><%= link_to 'Show', ad %></td>
    <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
    <td><%= link_to 'Destroy', ad, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ad', new_ad_path %>
