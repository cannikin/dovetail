<h1>Listing sites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Subdomain</th>
    <th>Enabled</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%=h site.name %></td>
    <td><%=h site.subdomain %></td>
    <td><%=h site.enabled %></td>
    <td><%= link_to 'Show', [:api,site] %></td>
    <td><%= link_to 'Edit', edit_api_site_path(site) %></td>
    <td><%= link_to 'Destroy', [:api,site], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New site', new_api_site_path %>
